<div class="message" data-session="<%= session[:user_id] %>">
  <% user = User.find_by(id: message.from_id) %>
  <div class="<%= (message.from_id == current_user.id) ? "message_right" : ""  %>" style="margin: 30px 0 30px 0;padding: 10px;width: 100%;" >
    <span class="" id="message_content" style="background-color: #ffe4e1;font-size: 30px;" ><%= message.content%></span>
  </div>


  <script type="text/javascript">
    $(function(){
        var from_id = <%= message.from_id %>;
        var current_user_id = $('.message').data('session');
        if(from_id == current_user_id){
          $('span.' + <%= message.id %>).css('text-align', 'right');
        }else{
          $('span.' + <%= message.id %>).css('text-align', 'left');
        }
  });
  </script>

</div>