<%= render 'layouts/header' %>
<!-- REGISTRATION FORM -->
<div class="text-center" style="padding:50px 0">
  <div class="logo">signup</div>
  <!-- Main Form -->
  <div class="login-form-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "register-form", class: "text-left") do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">

          <div class="form-group">
            <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name", class: "form-control", placeholder: "nick_name"%>
          </div>

          <div class="form-group">
            <%= f.text_field :user_name, autocomplete: "user_name", class: "form-control", placeholder: "user_name"%>
          </div>

          <div class="form-group login-group-checkbox">
            <div class="radio-inline">
               <%= f.radio_button :sex, :男 %>
               <%= f.label :男, style: "margin-right: 50px;" %>
            </div>
            <div class="radio-inline">
               <%= f.radio_button :sex, :女 %>
               <%= f.label :女 %>
            </div>
          </div>

          <div class="form-group">
            <%= f.date_field :birthday, autocomplete: "birthday", class: "form-control", style: "height: 35px;color: #aaaaaa;margin-left: -5px;" %>
          </div>

          <div class="form-group">
            <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control", placeholder: "telephone_number"%>
          </div>

          <div class="form-group">
            <%= f.text_field :postalcode, autocomplete: "postalcode", class: "form-control", placeholder: "postalcode"%>
          </div>

          <div class="form-group">
            <%= f.select :prefecture, User.prefectures.keys, {prompt: 'prefecture'}, class: 'form-control', style: "height: 35px;color: #aaaaaa;margin-left: -8px;" %>
          </div>

          <div class="form-group">
            <%= f.text_field :address, autocomplete: "address", class: "form-control", placeholder: "address"%>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "email"%>
          </div>

          <div class="form-group">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "password (6chara min)"  %>
          </div>

          <div class="form-group">
             <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"confirm password" %>
          </div>

        </div>
        <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
      </div>
      <div class="etc-login-form">
        <p>already have an account? <a href="/users/sign_in">login here</a></p>
      </div>
　　<% end %>
  </div>
  <!-- end:Main Form -->
</div>