<% if @cat.favorite?(@cat, current_user) %>
	<ul class="list-unstyled">
	 <li class="like_off">
	  <%= link_to "★気になっている", cat_favorites_path(@cat), method: :delete, remote: true, class: "like_off_btn btn btn-default", :style=>"width: 150px;" %>
	 </li>
	</ul>
<% else %>
	<ul class="list-unstyled">
	 <li class="like_on">
	  <%= link_to "☆気になる", cat_favorites_path(@cat), method: :post, remote: true, class: "like_on_btn btn btn-default", :style=>"width: 150px;" %>
	 </li>
	</ul>
<% end %>