<div class="container">
	<div class="row">
	<div class="d-inline-block col-lg-10 col-lg-offset-1">

		<% if notice %>
        <div class="alert alert-success alert-dismissible" role="alert" style="margin-top: 30px;">
          <button type="button" class="close" data-dismiss="alert">
          	<span aria-hidden="true">&times;</span>
            <span class="sr-only">close</span>
          </button>
          <%= notice %>
        </div>
        <% end %>

		<h2 style="border-left: 8px solid #f2a49b;margin-top: 40px;">ご家族様募集中の猫さん</h2>

		<% @cats.each do |cat| %>

				<div class="d-inline-block col-lg-3 col-xs-4 col-xs-offset-2 " style="margin: 30px 0 30px 0;">
					<%= link_to cat_path(cat.id) do %>
					  <% cat.cat_images.first(1).each do |image| %>
					    <%= attachment_image_tag image, :image, :fill, 180, 180, style: " border-radius: 50%;border: solid 3px white;" %>
					  <% end %>
					<% end %>
					<div class="cat date" style="margin-left: 40px;">
						<p class="" style="margin: 10px 0px 0px 0px;"><%= cat.kind %></p>
						<p class="" style="margin: 0px 0px 0px 0px;"><%= cat.age %>/<%= cat.sex %></p>
						<p class="" style="margin: 0px 0px 0px 0px;"><%= cat.prefecture %></p>
					</div>
				</div>

		<% end %>
　　</div>
　　</div>

	<div class="row">
	<div class="d-inline-block col-lg-10 col-lg-offset-1">
		<div class="search-box" style="margin-bottom: 30px;">
		　　　<h2 style="border-left: 8px solid #f2a49b;margin: 30px 0 30px 0;">理想の猫さんを探す</h2>
		     <%= render 'cats/catsearch' %>
	     </div>
	</div>
    </div>
</div>