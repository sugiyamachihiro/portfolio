<div class="container">
<div class="row">
<aside class="col-lg-12" style="padding: 0px;">
<h2 class="text-center" style="height: 50px;margin-top: 40px;">お問い合わせ</h2>
    <section class="message_box">
      <div class="col-lg-10 col-lg-offset-1">
        <div id="inquiry_messages">
          <%= render 'inquiry_messages/inquiry_message' %>
        </div>
      </div>
    </section>

    <script type="text/javascript">
      var height = 0;
      $("div.message").each( function() {
        height += ($(this).height());
      });
      $('section.message_box').scrollTop(height);
    </script>

　　<div class="col-lg-8 col-lg-offset-2">
    <div class="message_form" style="padding-top: 30px;padding-bottom: 30px;">
      <% if current_user == nil %>
       <%= render 'inquiry_messages/inquiry_message_form',
       {from_user: current_admin, inquiry_room_id: @inquiry_room.id } %>
      <% else %>
       <%= render 'inquiry_messages/inquiry_message_form',
       {from_user: current_user, inquiry_room_id: @inquiry_room.id } %>
      <% end %>
    </div>
   </div>

</aside>
</div>
</div>