<div class="container">
<div class="row">
<aside class="col-lg-12" style="padding: 0px;">
<h2 class="text-center" style="height: 50px;margin-top: 40px;"><%= @room.cat.title %>についてのお問い合わせ</h2>
    <section class="message_box">
    <div class="col-lg-10 col-lg-offset-1">
      <div id="messages">
        <%= render 'messages/message' %>
      </div>
    </div>
    </section>

    <script type="text/javascript">
      var height = 0;
      $("div.message").each( function() {
        height += ($(this).height());
      });
      $('section.message_box').scrollTop(height);
    </script>

   <div class="col-lg-8 col-lg-offset-2">
    <div class="message_form" style="padding-top: 30px;padding-bottom: 30px;">
     <%= render 'messages/message_form',
       {from_user: current_user, room_id: @room.id} %>
    </div>
  </div>
</aside>
</div>
</div>